
<div class="auth-container">
    <h2>Todas as Atividades</h2>
    <ul class="task-list">
    {{#each tasks}}
        <li>
            {{#if this.done}}
                <a href="/" class="title done">{{this.title}}</a>
            {{else}}
                <a href="/" class="title">{{this.title}}</a>
            {{/if}}   

            <div class="actions">

                <form action="/tasks/updatestatus" method="POST">
                <input type="hidden" name="id" value={{this.id}}>
                <input type="hidden" name="done" value={{this.done}}>
                    <button type="submit">
                        <i class="bi bi-check-square"></i>
                    </button>
                </form>

                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

                <form action="/tasks/remove" method="POST">
                <input type="hidden" name="id" value={{this.id}}>
                    <button type="submit">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>

            </div>
        </li>
    {{/each}}
</ul>
</div>
